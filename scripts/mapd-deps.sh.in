#!/usr/bin/env bash

PREFIX=%MAPD_DEPS_ROOT%

export LD_LIBRARY_PATH=$PREFIX/lib64:$LD_LIBRARY_PATH
export LD_LIBRARY_PATH=$PREFIX/lib:$LD_LIBRARY_PATH
export LIBRARY_PATH=$PREFIX/lib64:$LIBRARY_PATH
export LIBRARY_PATH=$PREFIX/lib:$LIBRARY_PATH
export C_INCLUDE_PATH=$PREFIX/include:$C_INCLUDE_PATH
export CXX_INCLUDE_PATH=$PREFIX/include:$CXX_INCLUDE_PATH
export PATH=$PREFIX/bin:$PATH

export BOOST_ROOT=$PREFIX
export BOOSTROOT=$PREFIX
export BOOST_DIR=$PREFIX
export BOOSTDIR=$PREFIX
export BOOST_INCLUDEDIR=$PREFIX/include
export BOOST_LIBRARYDIR=$PREFIX/lib

export CC=$PREFIX/bin/gcc
export CXX=$PREFIX/bin/g++

export PATH=$PREFIX/go/bin:$PATH
export GOROOT=$PREFIX/go

export PATH=$PREFIX/maven/bin:$PATH

export VULKAN_SDK=$PREFIX
export VK_LAYER_PATH=$PREFIX/etc/vulkan/explicit_layer.d

source /opt/intel/oneapi/setvars.sh  > /dev/null
