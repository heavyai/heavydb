#!/usr/bin/env bash

HEAVY_PREFIX=%MAPD_DEPS_ROOT%

export LD_LIBRARY_PATH=$HEAVY_PREFIX/lib64:$LD_LIBRARY_PATH
export LD_LIBRARY_PATH=$HEAVY_PREFIX/lib:$LD_LIBRARY_PATH
export LIBRARY_PATH=$HEAVY_PREFIX/lib64:$LIBRARY_PATH
export LIBRARY_PATH=$HEAVY_PREFIX/lib:$LIBRARY_PATH
export C_INCLUDE_PATH=$HEAVY_PREFIX/include:$C_INCLUDE_PATH
export CXX_INCLUDE_PATH=$HEAVY_PREFIX/include:$CXX_INCLUDE_PATH
export PATH=$HEAVY_PREFIX/bin:$PATH

export BOOST_ROOT=$HEAVY_PREFIX
export BOOSTROOT=$HEAVY_PREFIX
export BOOST_DIR=$HEAVY_PREFIX
export BOOSTDIR=$HEAVY_PREFIX
export BOOST_INCLUDEDIR=$HEAVY_PREFIX/include
export BOOST_LIBRARYDIR=$HEAVY_PREFIX/lib

export CC=$HEAVY_PREFIX/bin/gcc
export CXX=$HEAVY_PREFIX/bin/g++

export PATH=$HEAVY_PREFIX/go/bin:$PATH
export GOROOT=$HEAVY_PREFIX/go

export PATH=$HEAVY_PREFIX/maven/bin:$PATH

export VULKAN_SDK=$HEAVY_PREFIX
export VK_LAYER_PATH=$HEAVY_PREFIX/etc/vulkan/explicit_layer.d

export MEMKIND_PREFIX=$HEAVY_PREFIX
